datasource db {
  provider = "sqlite"
  url      = env("file:./dev.db")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String
  dob        DateTime?
  birthCity  String?
  postalCode String?
  gender     String?
  country    String?
  address    String?
}

model Purchase {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  productId    Int
  productName  String
  productPrice String
  cardNumber   String?
  phone        String?
  city         String?
  address      String?
  country      String?
  createdAt    DateTime @default(now())
}

model Femmes {
  id    Int    @id @default(autoincrement())
  name  String
  price String
  image String
}

model Hommes {
  id    Int    @id @default(autoincrement())
  name  String
  price String
  image String
}

model Enfants {
  id    Int    @id @default(autoincrement())
  name  String
  price String
  image String
}

model Autres {
  id    Int    @id @default(autoincrement())
  name  String
  price String
  image String
}
