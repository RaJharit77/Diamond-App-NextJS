datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // Exemple: sqlite:./db.sqlite
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  createdAt DateTime @default(now())
}
